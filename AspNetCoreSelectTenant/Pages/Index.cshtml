@page
@model IndexModel
@{
    ViewData["Title"] = "Microsoft Entra ID client for multiple tenants";
}

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Details</h5>

        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">AppTenantName: @Model.AppTenantName</h5>
                        <p class="card-text">TenantId: @Model.TenantId</p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="card" style="width: 18rem;">
                    <div class="card-header">
                        Roles
                    </div>
                    <ul class="list-group list-group-flush">
                
                        @foreach (var role in Model.RolesInTenant)
                        {
                            <li class="list-group-item">@role</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>